<?xml version="1.0" ?>
<Configuration Environment="Dev" Version="2.0.3">
    <Install>
        <ConfigFile>config.xml</ConfigFile>
        <OfflineInstall>True</OfflineInstall>
        <Disable>
            <Loopback>True</Loopback>
            <UnusedServices>True</UnusedServices>
        </Disable>
    </Install>
    <Farm>
        <Passphrase></Passphrase>
        <Account Username="DOMAIN\spfarm"
                 Password=""
                 Email="spfarm@domain.com"
                 AddToLocalAdminsDuringSetup="True" />
        <!-- common name spfarm -->
        <CentralAdmin Provision="True">
            <CentralAdminContentDB>AdminContentDB</CentralAdminContentDB>
            <CentralAdminPort>2010</CentralAdminPort>
        </CentralAdmin>
        <Database>
            <DBServer>localhost</DBServer>
            <!--Hint: if you leave <DBServer> blank or specify localhost, script will assume the local server for SQL databases-->
            <DBPrefix>localhost</DBPrefix>
            <!--Hint: if you put localhost for <DBPrefix>, script will prepend each database with the name of the server on which the script is run. Useful for identifying databases on shared SQL instances. Otherwise specify your own value, or just leave blank for NO prefix.-->
            <ConfigDB>ConfigDB</ConfigDB>
        </Database>
        <Services>
            <SandboxedCodeService Start="True" />
            <SearchQueryAndSiteSettingsService Start="False" />
            <OutgoingEmail Configure="True">
                <SMTPServer></SMTPServer>
                <EmailAddress></EmailAddress>
                <ReplyToEmail></ReplyToEmail>
            </OutgoingEmail>
        </Services>
        <ManagedAccounts>
            <ManagedAccount username="DOMAIN\spservice" Password="" CommonName="spservice"/>
            <ManagedAccount username="DOMAIN\portalacc" Password="" CommonName="portalapppool"/>
            <ManagedAccount username="DOMAIN\mysitesacc" Password="" CommonName="mysiteapppool"/>
            <ManagedAccount username="DOMAIN\content03" Password="" CommonName="searchservice"/>
        </ManagedAccounts>
        <ObjectCacheAccounts>
            <SuperUser>DOMAIN\SP_CacheSuperUser</SuperUser>
            <SuperReader>DOMAIN\SP_CacheSuperReader</SuperReader>
        </ObjectCacheAccounts>
    </Farm>
    <WebApplications>
        <WebApplication type="Portal"
                        name="Portal Home"
                        applicationPool="PortalHome"
                        applicationPoolAccount="DOMAIN\portalacc"
                        url="http://localhost"
                        port="80"
                        databaseName="PortalHome_Content"
                        useClaims="True">
            <ManagedPaths>
                <ManagedPath relativeUrl="help" explicit="true" />
                <ManagedPath relativeUrl="sites" delete="true" />
            </ManagedPaths>
            <SiteCollections>
                <SiteCollection siteUrl="http://localhost"
                                owner="DOMAIN\spinstall"
                                name="Portal Home"
                                description="Portal Home Site"
                                SearchUrl="http://localhost/search"
                                CustomTemplate="false"
                                Template="SPSPORTAL#0"
                                LCID="1033">
                </SiteCollection>
            </SiteCollections>
        </WebApplication>
        <WebApplication type="MySiteHost"
                        name="MySiteHost"
                        applicationPool="MySites"
                        applicationPoolAccount="DOMAIN\mysitesacc"
                        url="http://localhost"
                        port="8080"
                        databaseName="MySites_Content"
                        useClaims="True">
            <SiteCollections>
                <SiteCollection siteUrl="http://localhost:8080"
                                owner="DOMAIN\portal.owner"
                                name="My Site Host"
                                description="My Site Host"
                                SearchUrl="http://localhost/search"
                                CustomTemplate="false"
                                Template="SPSMSITEHOST#0"
                                LCID="1033" />
            </SiteCollections>
            <ManagedPaths>
                <ManagedPath relativeUrl="personal" explicit="false"/>
                <ManagedPath relativeUrl="sites" delete="true" />
            </ManagedPaths>
        </WebApplication>
    </WebApplications>
    <ServiceApps>
        <ManagedMetadataServiceApp Provision="True">
            <Database>MetaDataDB</Database>
        </ManagedMetadataServiceApp>
        <UserProfileServiceApp Provision="True"
		    				   EnableNetBIOSDomainNames="False">
            <Name>User Profile Service Application</Name>
            <ProfileDB>ProfileDB</ProfileDB>
            <SyncDB>SyncDB</SyncDB>
            <SocialDB>SocialDB</SocialDB>
        </UserProfileServiceApp>
        <EnterpriseSearchService Provision="True"
							     ContactEmail=""
                                 ConnectionTimeout="60"
                                 AcknowledgementTimeout="60"
                                 ProxyType="Default"
                                 IgnoreSSLWarnings="false"
                                 InternetIdentity="Mozilla/4.0 (compatible; MSIE 4.01; Windows NT; MS Search 6.0 Robot)"
                                 IndexLocation="C:\Program Files\Microsoft Office Servers\14.0\Data\Office Server\Applications"
                                 PerformanceLevel="PartlyReduced"
                                 Account="DOMAIN\SPSearch"
                                 Password=""
                                 ShareName="SearchShare">
            <EnterpriseSearchServiceApplications>
                <EnterpriseSearchServiceApplication Name="Enterprise Search Service Application"
                                                    DatabaseServer="localhost"
                                                    DatabaseName="EnterpriseSearch"
                                                    FailoverDatabaseServer=""
                                                    Partitioned="false"
                                                    Partitions="1"
                                                    SearchServiceApplicationType="Regular"
                                                    ContentAccessAccount="DOMAIN\SearchContentAccess"
                                                    ContentAccessAccountPWD="">
                    <ApplicationPool Name="SharePoint Enterprise Search Application Pool" Account="DOMAIN\SPSearch" Password="" />
                    <CrawlServers>
                        <Server Name="localhost" />
                    </CrawlServers>
                    <QueryServers>
                        <Server Name="localhost" />
                    </QueryServers>
                    <SearchQueryAndSiteSettingsServers>
                        <Server Name="localhost" />
                    </SearchQueryAndSiteSettingsServers>
                    <AdminComponent>
                        <Server Name="localhost" />
                        <ApplicationPool Name="SharePoint Enterprise Search Application Pool" Account="DOMAIN\SPSearch" />
                    </AdminComponent>
                    <Proxy Name="Enterprise Search Service Application Proxy" Partitioned="false">
                        <ProxyGroup Name="Default" />
                    </Proxy>
                </EnterpriseSearchServiceApplication>
            </EnterpriseSearchServiceApplications>
        </EnterpriseSearchService>
        <StateService Provision="True">
            <StateServiceDB>StateServiceDB</StateServiceDB>
        </StateService>
        <WebAnalyticsService Provision="True" Name="Web Analytics Service Application">
            <ReportingDB>WebAnalyticsReportingDB</ReportingDB>
            <StagingDB>WebAnalyticsStagingDB</StagingDB>
        </WebAnalyticsService>
        <WSSUsageService Provision="True" Name="WSS Usage Application">
            <WSSUsageDB>WSSUsageApplicationDB</WSSUsageDB>
        </WSSUsageService>
        <SecureStoreService Provision="True" Name="Secure Store Service Application">
            <SecureStoreDB>SecureStoreDB</SecureStoreDB>
        </SecureStoreService>
        <BusinessDataConnectivity Provision="True">
            <Database>BusinessDataCatalogDB</Database>
        </BusinessDataConnectivity>
    </ServiceApps>
</Configuration>